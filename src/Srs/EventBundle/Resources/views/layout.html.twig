{% extends "::base.html.twig" %}

{% block title %}
    Event - {{ parent() }}
{% endblock %}    
    
{% block body %}

    {# On définit un sous-titre commun à toutes les pages du bundle, par exemple #}
    <h1>Event</h1>

    <hr>

    {# On définit un nouveau block, que les vues du bundle pourront remplir #}
    {% block srsevent_body %}
    {% endblock %}

{% endblock %}

{% block comment %}
    <h2>Commentaires</h2>
    
    <hr>
    {% block srscomment_body %}
    {% endblock %}
    
{% endblock %}

